<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.battleship.controller.GameOverController">
    <VBox fx:id="containerBox" alignment="CENTER" minHeight="600.0" prefWidth="800.0"
          spacing="25.0" style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">

        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
        </padding>

        <!-- Title -->
        <Label fx:id="lblTitle" text="ðŸŽ‰ VICTORY! ðŸŽ‰" textFill="#27ae60" textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>

        <!-- Message -->
        <Label fx:id="lblMessage" text="Congratulations, Admiral!" textFill="#2ecc71" textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <!-- Spacer -->
        <VBox prefHeight="10.0" />

        <!-- Statistics Box -->
        <VBox alignment="CENTER" spacing="15.0" maxWidth="600.0"
              style="-fx-background-color: rgba(0, 0, 0, 0.4); -fx-background-radius: 15; -fx-padding: 30; -fx-border-color: rgba(255, 255, 255, 0.2); -fx-border-width: 2; -fx-border-radius: 15;">
            <Label fx:id="lblStats" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
        </VBox>

        <!-- Spacer -->
        <VBox prefHeight="20.0" />

        <!-- Buttons -->
        <Button fx:id="btnPlayAgain" onAction="#handlePlayAgain" prefHeight="60.0" prefWidth="350.0"
                text="ðŸ”„ PLAY AGAIN"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Button>

        <Button fx:id="btnMainMenu" onAction="#handleMainMenu" prefHeight="60.0" prefWidth="350.0"
                text="ðŸ  MAIN MENU"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Button>

        <!-- Footer spacer -->
        <VBox prefHeight="20.0" />

    </VBox>
</ScrollPane>